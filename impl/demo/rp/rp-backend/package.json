{
  "name": "did-siop",
  "version": "0.0.1",
  "description": "Nest TS implementation of the DID-SIOP protocol.",
  "repository": {
    "type": "git",
    "url": "https://github.com/decentralized-identity/did-siop"
  },
  "author": "Validated Id <info@validatedid.com>",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/bull": "^0.1.0",
    "@nestjs/common": "^7.0.3",
    "@nestjs/core": "^7.0.3",
    "@nestjs/platform-express": "^7.0.3",
    "@nestjs/platform-socket.io": "^7.0.3",
    "@nestjs/testing": "^7.0.3",
    "@nestjs/websockets": "^7.0.3",
    "@types/qrcode": "^1.3.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.7",
    "@types/ws": "^7.2.2",
    "axios": "^0.21.1",
    "base-58": "0.0.1",
    "base58": "^2.0.1",
    "base64url": "^3.0.1",
    "bufferutil": "^4.0.1",
    "bull": "^3.13.0",
    "canvas": "^2.6.1",
    "did-method-key": "^0.5.0",
    "did-resolver": "^1.1.0",
    "ethers": "^4.0.45",
    "jest": "^25.1.0",
    "jose": "^1.23.0",
    "key-encoder": "^2.0.3",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/bull": "^3.12.1",
    "@types/jest": "^25.1.4",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@lib/did-siop/(.*)": "<rootDir>/libs/lib-did-siop/src/$1",
      "@lib/did-siop": "<rootDir>/libs/lib-did-siop/src",
      "@lib/wallet/(.*)": "<rootDir>/src/wallet/$1",
      "@lib/wallet": "<rootDir>/src/wallet"
    }
  }
}
